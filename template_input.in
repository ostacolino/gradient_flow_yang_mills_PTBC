size 14 4 4 12  # Nt Nx Ny Nz

# For adaptive gradient flow evolution
agf_length       0.5    # total integration time for adaptive gradient flow
agf_step       0.05    # initial integration step for adaptive gradient flow
agf_meas_each     0.25    # time interval between measures during adaptive gradient flow
agf_delta     0.01    # error threshold on gauge links for adaptive gradient flow
agf_time_bin  0.01    # error threshold on time of measures for adaptive gradient flow

# Observables to measure
plaquette_meas        		0  # 1=YES, 0=NO
clover_energy_meas    		1  # 1=YES, 0=NO
charge_meas           		1  # 1=YES, 0=NO
polyakov_meas         		0  # 1=YES, 0=NO
chi_prime_meas        		1  # 1=YES, 0=NO
topcharge_tprof_meas  		1  # 1=YES, 0=NO
topcharge_MOM_tprof_meas	1  # 1=YES, 0=NO
topcharge_MOM_tprof_dir 	1  # direction of k vector: 1=x, 2=y, 3=z
# Input files
conf_file             ../conf_TEST.dat_step_10

# Output files
data_file             		dati.dat
chiprime_data_file    		chi_prime_yes_run_1.dat
topcharge_tprof_file  		topo_tprof_yes_run_1.dat
topcharge_MOM_tprof_file  	topo_MOM_tprof_yes_run_1.dat
log_file              		log_yes_run_1.dat

randseed 42    #(0=time)
